# Basic Settings

# Assumes brew as been installed
TM_PYTHON        = "/usr/local/bin/python3"
TM_C_FLAGS       = "-Wall -include stdio.h -std=c99"
TM_FULLNAME      = "Michael Ball"

projectDirectory = "$CWD"
TM_FILEPATH      = ""
TM_MAKE_FILE     = '${TM_PROJECT_DIRECTORY}/Makefile'
# TM_MAKE_TARGET   = ""

# Extra files to include
#
fileBrowserGlob  = "{*,.*}"
include = "{$include,.*}"

# Hide log, vendor and tmp directories from search popups.
#
myExtraExcludes       = "log,vendor,tmp,.svn,*.pyc,*.class"
excludeInFileChooser  = "{$excludeInFileChooser,$myExtraExcludes}"
excludeInFolderSearch = "{$excludeInFolderSearch,$myExtraExcludes}"
excludeInBrowser      = "{$excludeInBrowser, $myExtraExcludes}"


# Configure git and hg
#

# Default editing configuration
#
fontName         = SourceCodePro-Light
fontSize         = 24.000000
lineEndings      = '\n'
showInvisibles   = true
showWrapColumn   = true
softTabs         = true
softWrap         = false
spellChecking    = true
tabSize          = 4
theme            = 06CD1FB2-A00A-4F8C-97B2-60E131980454
wrapColumn       = 80


# File type specific configuration
#
[ text ]
showInvisibles   = true
spellChecking    = true
tabSize          = 4

[ .git/COMMIT_EDITMSG ]
spellChecking    = true
spellingLanguage = 'en'

[ *.{icns,ico,jpg,jpeg,m4v,nib,pdf,png,psd,pyc,rtf,tif,tiff,xib,class,o} ]
binary           = true

[ source ]
softTabs         = true
tabSize          = 4

[ source.python ]
softTabs         = true
tabSize          = 4

[ "{README,INSTALL,LICENSE,TODO}" ]
fileType         = "text.plain"

[ Makefile.* ]
fileType        = "source.makefile"
softTabs        = false
tabSize         = 2

[ *.{html,css} ]
softTabs        = true
softWrap        = false
tabSize         = 2

[ source.tex, source.latex ]
softTabs         = true
tabSize          = 2

[ *.md ]
fileType         = text.html.markdown

[ *.stderrout.log ]
fileType         = text.plain

[ .aliases ]
fileType         = text.plain

[ .bash_prompt ]
fileType         = text.plain

[ .classpath ]
fileType         = text.xml

[ .exports ]
fileType         = text.plain

[ .extra ]
fileType         = text.plain

[ .functions ]
fileType         = text.plain

[ .gitattributes ]
fileType         = text.plain

[ .gitignore ]
fileType         = text.plain

[ .gitingore ]
fileType         = source.git-config

[ .inputrc ]
fileType         = text.plain

[ .project ]
fileType         = source.yaml

[ bash_prompt ]
fileType         = source.shell

[ source ]
softWrap         = false
tabSize          = 4

[ source.java ]
softWrap         = false

[ source.js ]
tabSize          = 4

[ source.json ]
tabSize          = 2

