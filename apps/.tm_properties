# Basic Settings

TM_PYTHON        = "/usr/local/bin/python3"
TM_C_FLAGS       = "-Wall -include stdio.h -std=c99"
TM_FULLNAME      = "Michael Ball"
spellChecking    = true

projectDirectory = "$CWD"
# TM_FILEPATH      = ""
TM_MAKE_FILE     = '${TM_PROJECT_DIRECTORY}/Makefile'
# TM_MAKE_TARGET   = ""

# Extra files to include
#
fileBrowserGlob  = "{*}"

# Hide log, vendor and tmp directories from search popups.
#
myExtraExcludes = "log,vendor,tmp,.svn,*.pyc,*.class"
excludeInFileChooser  = "{$excludeInFileChooser,$myExtraExcludes}"
excludeInFolderSearch = "{$excludeInFolderSearch,$myExtraExcludes}"
excludeInBrowser      = "{$excludeInBrowser}"


# Configure git and hg
TM_GIT              = "/usr/local/bin/git"

# Default editing configuration
#
fontName         = SourceCodePro-Regular
fontSize         = 24
showWrapColumn   = true
softTabs         = true
softWrap         = true
tabSize          = 4
theme            = 06CD1FB2-A00A-4F8C-97B2-60E131980454
wrapColumn       = 80
lineEndings      = '\n'
# Disable display of space characters
invisiblesMap    = '~ '


# File type specific configuration
#
[ text ]
showInvisibles   = true
spellChecking    = true
fontSize         = 22
tabSize          = 4

[ .git/COMMIT_EDITMSG ]
spellChecking    = true
spellingLanguage = 'en'

[ *.{icns,ico,jpg,jpeg,m4v,nib,pdf,png,psd,pyc,rtf,tif,tiff,xib,class} ]
binary           = true

[ source ]
softTabs         = true
tabSize          = 4
fontSize         = 22

[ source.python ]
softTabs         = true
tabSize          = 4

[ "{README,INSTALL,LICENSE,TODO}" ]
fileType         = "text.plain"

[ Makefile.* ]
fileType        = "source.makefile"
softTabs        = false
tabSize         = 2

[ *.{html,css} ]
softTabs        = true
tabSize         = 2

[ source.tex, source.latex ]
softTabs         = true
tabSize          = 2